{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@routers/*": ["./src/routers/*"],
            "@services/*": ["./src/services/*"],
            "@controllers/*": ["./src/controllers/*"],
            "@app/*": ["./src/app"],
            "@prisma": ["./src/prisma/index"],
            "@errors/*": ["./src/errors/*"],
            "@middlewares/*": ["./src/middlewares/*"],
            "@utils/*": ["./src/utils/*"]
        }
    }
}
